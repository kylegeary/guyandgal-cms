{
  "connection": "default",
  "collectionName": "posts",
  "info": {
    "name": "post",
    "description": "Blog post"
  },
  "options": {
    "increments": true,
    "timestamps": [
      "created_at",
      "updated_at"
    ],
    "comment": ""
  },
  "attributes": {
    "title": {
      "minLength": 3,
      "required": true,
      "unique": true,
      "type": "string"
    },
    "content": {
      "required": true,
      "type": "text"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload"
    },
    "author": {
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    },
    "postpreview": {
      "required": true,
      "type": "string"
    }
  }
}